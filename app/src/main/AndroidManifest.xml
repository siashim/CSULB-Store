<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.csulbstore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashPageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <intent-filter>
                    <action android:name="android.intent.action.VIEW" />

                    <category android:name="android.intent.category.DEFAULT" />
                    <category android:name="android.intent.category.BROWSABLE" />

                    <data
                        android:host="web.csulb.edu"
                        android:scheme="http" />
                </intent-filter>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AccountPageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".PostAListing" >
        </activity>
        <activity android:name=".AccountInfoActivity" >
        </activity>
        <activity android:name=".ListingsActivity" >
        </activity>
        <activity android:name=".ItemPageActivity" >
        </activity>
        <activity
            android:name=".SingleListView"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".temp_act"
            android:label="@string/title_activity_temp_act" >
        </activity>
        <activity
            android:name=".MyListingsActivity"
            android:label="@string/title_activity_my_listings" >
        </activity>
        <activity
            android:name=".MySingleListView"
            android:label="@string/title_activity_my_single_list_view" >
        </activity>
    </application>

</manifest>
