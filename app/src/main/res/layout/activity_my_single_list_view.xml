<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDD017"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Listing"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="50dp"
        android:id="@+id/heading" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="post title"
        android:id="@+id/etPostTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="text" />

    <Button
        android:id="@+id/updatefNameBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Update Post Title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="post description"
        android:id="@+id/etPostDescription"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="text"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/updatePostDescBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Update Post Description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

