<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDD017"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Page"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="50dp"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/updateaccntBtn"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Update Account Info"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:textColor="#fff" />

    <Button
        android:id="@+id/viewListingsBtn"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="View Listings"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

    <Button
        android:id="@+id/viewMyListingsBtn"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="View My Listings"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

    <Button
        android:id="@+id/postNewListingsBtn"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Post New Listing"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

    <Button
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Logout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:textColor="#fff" />

</LinearLayout><!-- From: file:/Users/cmendoza/AndroidStudioProjects/CSULBStore1/app/src/main/res/layout/account_page.xml -->